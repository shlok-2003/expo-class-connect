{
    "expo": {
        "name": "class-connect",
        "slug": "class-connect",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/images/icon.png",
        "scheme": "class-connect",
        "userInterfaceStyle": "automatic",
        "newArchEnabled": true,
        "splash": {
            "image": "./assets/images/icon.png",
            "resizeMode": "contain",
            "backgroundColor": "#5B4B8A"
        },
        "ios": {
            "supportsTablet": true
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/images/icon.png",
                "backgroundColor": "#ffffff"
            },
            "package": "com.shlok_03.classconnect"
        },
        "web": {
            "bundler": "metro",
            "output": "static",
            "favicon": "./assets/images/icon.png"
        },
        "plugins": [
            "expo-router",
            [
                "expo-local-authentication",
                {
                    "faceIDPermission": "Allow Class Connect to use Face ID."
                }
            ],
            [
                "expo-location",
                {
                    "locationAlwaysAndWhenInUsePermission": "Allow Class Connect to use your location."
                }
            ]
        ],
        "experiments": {
            "typedRoutes": true
        }
    }
}
